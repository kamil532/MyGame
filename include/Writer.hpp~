#ifndef WRITER_HPP
#define WRITER_HPP
#include "Heders.hpp"

class Writer{
public: 
  Writer();  
  void WriteString(const string& Text,
		   const SDL_Rect& WhereRect,
		   const SDL_Color& Color);
  
  void WriteString(const string& Text,
		   const SDL_Rect& WhereRect);
  
  void DrawScore(const ulong& Number, const SDL_Rect& Where);
  
  ~Writer();
  
private: 
  TTF_Font *m_font_a;
  SDL_Color m_font_color; 
  
};
typedef boost::shared_ptr<Writer> WriterPtr;

#endif
